<Application x:Class="Rosneft.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Rosneft"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ImageSource x:Key="imgSource">Resources\Background.jpg</ImageSource>
        <ImageBrush x:Key="BackgroundImage" ImageSource="{DynamicResource imgSource}"></ImageBrush>
    </Application.Resources>
</Application>
