<Page x:Class="Rosneft.Pages.RepairPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      mc:Ignorable="d"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Ведение ремонта" Loaded="RepairPage_OnLoaded">

    <Page.Resources>
        <Style TargetType="{x:Type DataGridCellsPresenter}" BasedOn="{StaticResource DgTcStyle}" />
        <Style TargetType="{x:Type DataGrid}" BasedOn="{StaticResource DgStyle}" />
    </Page.Resources>

    <Grid>
        <StackPanel Orientation="Vertical">
            <DataGrid ItemsSource="{Binding DataCollection.ObservableRepair, UpdateSourceTrigger=PropertyChanged}">
                <DataGrid.Columns>
                    <DataGridTextColumn Width="auto" Header="№ п\п"
                                        Binding="{Binding Path='Rows',UpdateSourceTrigger=PropertyChanged}" />
                    <DataGridTextColumn Width="*" Header="Бригада"
                                        Binding="{Binding Path='Team', UpdateSourceTrigger=PropertyChanged}" />
                    <DataGridTextColumn Width="*" Header="Месторождение"
                                        Binding="{Binding Path='Field', UpdateSourceTrigger=PropertyChanged}" />
                    <DataGridTextColumn Width="*" Header="Куст"
                                        Binding="{Binding Path='Bush', UpdateSourceTrigger=PropertyChanged}" />
                    <DataGridTextColumn Width="*" Header="Скважина"
                                        Binding="{Binding Path='Hole', UpdateSourceTrigger=PropertyChanged}" />
                    <DataGridTextColumn Width="*" Header="Дата начала ремонта"
                                        Binding="{Binding Path='DateCreate', UpdateSourceTrigger=PropertyChanged}" />
                    <DataGridTextColumn Width="*" Header="Время начала ремонта"
                                        Binding="{Binding Path='TimeCreate', UpdateSourceTrigger=PropertyChanged}" />
                    <DataGridTemplateColumn>
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel>
                                    <Button Content="Продолжить ремонт" HorizontalAlignment="Left" Margin="0"
                                            Width="auto"
                                            Height="25"
                                            Command="{Binding Path=DataContext.OpenContinueRepairCommand, RelativeSource= {RelativeSource FindAncestor, AncestorType={x:Type DataGrid}}}" />
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTemplateColumn>
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Button Content="Закрыть ремонт" HorizontalAlignment="Left" Margin="0" Width="auto"
                                        Height="25" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
            <Button Content="Создать ремонт" Width="125" Height="25" Command="{Binding OpenAddRepairCommand}" />
        </StackPanel>
    </Grid>
</Page>